<header id="header">
	<div class="content">
		<div id="logo" onclick="scroll_to_top()" style="cursor: pointer;">
			<div id="logo-line-1">MSFT401k</div>
			<div id="logo-line-2">by Vest Me</div>			
		</div>

		<div id="navbar">
			<a id="top-link-signup" href="#" onclick="scroll_to_top()">Sign Up</a> |
			<a id="top-link-why" href="#" onclick="top_link_scroll('why')">Why</a> |
			<a id="top-link-how" href="#" onclick="top_link_scroll('how')">How</a> |
			<a id="top-link-returns" href="#" onclick="top_link_scroll('returns')">Returns</a> |
			<a id="top-link-vision" href="#" onclick="top_link_scroll('vision')">Vision</a>
		</div>

		<script>
		function scroll_to_top(){
			$("html, body").animate({scrollTop: 0}, 1000);
		}
		function top_link_scroll(link_target) {
			if (link_target == "") return;
			$("html, body").animate(
				{ scrollTop: $('#section-' + link_target).offset().top - 70 }, 1000);
		}
	  	function handle_hash() {
	  		top_link_scroll(window.location.hash.substring(1));
  		}
		$("#navbar a").click(function(event) {
		  event.preventDefault();
		});
		</script>

	</div>
</header>