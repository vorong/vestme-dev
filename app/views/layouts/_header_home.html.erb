<header id="header">
	<div class="content">
		<div id="logo" onclick="scroll_to_top()" style="cursor: pointer;">
			<div id="logo-line-1">MSFT401k</div>
			<div id="logo-line-2">by Vest Me</div>			
		</div>

		<div id="navbar">
			<a id="top-link-signup" href="#" onclick="scroll_to_top()">Sign Up</a> |
			<a id="top-link-why" href="#why" onclick="top_link_scroll('why')">Why</a> |
			<a id="top-link-how" href="#how" onclick="top_link_scroll('how')">How</a> |
			<a id="top-link-returns" href="#returns" onclick="top_link_scroll('returns')">Returns</a> |
			<a id="top-link-vision" href="#vision" onclick="top_link_scroll('vision')">Vision</a>
