		<script>
	  	if (isWPDevice != null) {
	  		// do nothing
	  	} else {
			function scroll_to_top(){
				event.preventDefault();
				if ($(window).scrollTop() != 0) $("html, body").animate({scrollTop: 0}, 800);
			}
			function top_link_scroll(link_target) {
				event.preventDefault();
				if (link_target == "") return;
				$("html, body").animate({ scrollTop: $('#' + link_target).offset().top }, 800);
			}
		  	function handle_hash() {
		  		top_link_scroll(window.location.hash.substring(1));
	  		}
	  	}
		</script>

	</div>
</header>